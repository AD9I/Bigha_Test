<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/HomeDiv1"
                app:layout_constraintTop_toBottomOf="parent"
                android:background="@color/Tan"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical"
                tools:ignore="UnknownId">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:src="@drawable/app_back"
                    android:layout_marginTop="-20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!-- Add more content to HomeDiv1 if needed -->
            </LinearLayout>
            <LinearLayout
                android:layout_height="300dp"
                android:layout_width="match_parent"
                android:id="@+id/HomeDiv2"
                app:layout_constraintTop_toBottomOf="@+id/HomeDiv1"
                android:background="@drawable/micro_finance_image"
                android:orientation="vertical"
                android:layout_marginTop="-15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/microfinances"
                    android:textSize="30dp"
                    android:textColor="@color/Iris"
                    android:layout_gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transforming Agriculture Forever"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/MicroFinanceTxt" />

                <!--                //NO VALUE (REMOVABLE) -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go_to_micro_finances"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/LightGrey"
                    android:layout_marginTop="30dp"

                    android:alpha="0.8" />
                <Button
                    android:id="@+id/btnKnowMoreMicroFin"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/know_more"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/LightGrey"
                    android:alpha="0.8" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@id/HomeDiv2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/tract"
                android:orientation="vertical"
                android:id="@+id/HomeDiv3"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rent_equipments"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textColor="@color/Iris"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modernizing_farm_equipment_access"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/find_tools_nearby"
                    android:id="@+id/Tool_button"
                    android:onClick="RedirectRent"
                    android:layout_marginTop="30dp"
                    />
                <Button
                    android:id="@+id/btnKnowMoreRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/know_more"
                    android:layout_marginTop="30dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@+id/HomeDiv3"
                app:layout_constraintLeft_toLeftOf="@+id/HomeDiv3"
                android:background="@drawable/keede_bachao"
                android:orientation="vertical"
                android:id="@+id/HomeDiv4"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_detection"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/Iris"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_diagnosis_and_cure"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detect_diseases"
                    android:backgroundTint="@color/LightBlack"
                    android:layout_marginTop="65dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"

                    ></Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/LightBlack"
                    android:text="@string/outbreaks_nearby"
                    android:layout_marginLeft="10dp"
                    >

                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/HomeDiv5"
                app:layout_constraintTop_toBottomOf="@+id/HomeDiv4"
                app:layout_constraintRight_toLeftOf="parent"
                android:orientation="vertical"
                android:background="@drawable/agro_tourism">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agrotourism"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/Iris"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="@string/diversify_your_income"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agro_tourism_profile"
                    android:id="@+id/GotoAgro"
                    android:onClick="RedirectAgro"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="@color/alagBlue"
                    ></Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>