<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Navbar -->
        <LinearLayout
            android:id="@+id/Navbar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/my_secondary"
            android:alpha="0.9"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/baseline_view_headline_24"
                app:tint="#4E2222"
                android:onClick="HamOpen"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:text="BIGHA"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textStyle="bold" />
            <View
                android:layout_width="160dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/user"
                android:scaleType="centerInside"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <!-- HomeDiv1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/HomeDiv1"
            app:layout_constraintTop_toBottomOf="@+id/Navbar"
            android:background="@color/Tan"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/app_back"
                android:layout_marginTop="-20dp"
                android:onClick="HamOpen"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!-- Add more content to HomeDiv1 if needed -->
        </LinearLayout>

        <!-- HomeDiv2 -->
        <LinearLayout
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:id="@+id/HomeDiv2"
            app:layout_constraintTop_toBottomOf="@+id/HomeDiv1"
            android:background="@drawable/micro_finance_image"
            android:orientation="vertical"
            android:layout_marginTop="-15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="MicroFinances "
                android:textSize="30dp"
                android:textColor="@color/Iris"
                android:layout_gravity="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transforming Agriculture Forever"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/MicroFinanceTxt" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Micro Finances"
                android:textColor="@color/black"
                android:backgroundTint="@color/LightGrey"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:alpha="0.8" />
            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Know More"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/LightGrey"
                android:alpha="0.8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/HomeDiv3"
            app:layout_constraintLeft_toLeftOf="@+id/HomeDiv3"
            android:background="@drawable/keede_bachao"
            android:orientation="vertical"
            android:id="@+id/HomeDiv4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disease Detection"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/Iris"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Diagnosis and cure"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20dp"
                android:textStyle="bold"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detect Diseases"
                android:backgroundTint="@color/LightBlack"
                android:layout_marginTop="65dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp"

                ></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/LightBlack"
                android:text="Outbreaks Nearby"
                android:layout_marginLeft="10dp"
                >

            </Button>

            <LinearLayout
                android:id="@+id/HomeDiv3"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/tract"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Rent Equipments"
                    android:textColor="@color/Iris"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Modernizing Farm Equipment Access"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Find Tools Nearby"

                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Know More"

                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/HomeDiv4"
            app:layout_constraintRight_toLeftOf="parent"
            android:orientation="vertical"
            android:background="@drawable/agro_tourism">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AgroTourism"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/Iris"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Diversify your income"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agrotourism Profile"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/alagBlue"
                ></Button>
            ></LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
